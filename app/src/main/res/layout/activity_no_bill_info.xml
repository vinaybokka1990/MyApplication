<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NoBillInfo"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textView32323"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:padding="5dp"
        android:text="Who is your Electricity provider?"
        android:textStyle="bold" />
    <EditText
        android:id="@+id/editText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/border_style"
        android:ems="10"
        android:inputType="textPersonName" />
    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:padding="5dp"
        android:text="Level of Usage?"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/button7"
            android:layout_width="111dp"
            android:layout_height="wrap_content"
            android:background="@drawable/button_background"
            android:text="Low"
            android:textColor="@android:color/holo_blue_light" />

        <Button
            android:id="@+id/button6"
            android:layout_width="111dp"
            android:layout_height="wrap_content"
            android:background="@drawable/button_background"
            android:text="Medium"
            android:textColor="@android:color/holo_blue_light" />

        <Button
            android:id="@+id/button8"
            android:layout_width="111dp"
            android:layout_height="wrap_content"
            android:background="@drawable/button_background"
            android:text="High"
            android:textColor="@android:color/holo_blue_light" />
    </LinearLayout>

    <TextView
        android:id="@+id/textView3237623"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:padding="5dp"
        android:text="Who is your Gas provider?"
        android:textStyle="bold" />
    <EditText
        android:id="@+id/editText222"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/border_style"
        android:ems="10"
        android:inputType="textPersonName" />
    <TextView
        android:id="@+id/textView22"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:padding="5dp"
        android:text="Level of Usage?"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/button72"
            android:layout_width="111dp"
            android:layout_height="wrap_content"
            android:background="@drawable/button_background"
            android:text="Low"
            android:textColor="@android:color/holo_blue_light" />

        <Button
            android:id="@+id/button65"
            android:layout_width="111dp"
            android:layout_height="wrap_content"
            android:background="@drawable/button_background"
            android:text="medium"
            android:textColor="@android:color/holo_blue_light" />

        <Button
            android:id="@+id/button87"
            android:layout_width="111dp"
            android:layout_height="wrap_content"
            android:background="@drawable/button_background"
            android:text="high"
            android:textColor="@android:color/holo_blue_light" />
    </LinearLayout>

    <TextView
        android:id="@+id/tvNoBillSave"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:gravity="center"
        android:paddingTop="50dp"
        android:text="save"
        android:textColor="@android:color/holo_blue_light"
        android:textSize="24sp"
        android:textStyle="bold" />

</LinearLayout>