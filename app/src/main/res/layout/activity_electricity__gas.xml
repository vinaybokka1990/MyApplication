<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Electricity_Gas"
    android:orientation="vertical">


    <TextView
        android:id="@+id/tvEnGProp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="Type of Property?"
        android:textStyle="bold" />
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <Button
        android:id="@+id/elecgasHomeBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/button_background"
        android:text="Home"
        android:textColor="@android:color/holo_blue_light" />

    <Button
        android:id="@+id/elecgasBnsBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:background="@drawable/button_background"
        android:text="Business"
        android:textColor="@android:color/holo_blue_light" />

</LinearLayout>

    <TextView
        android:id="@+id/tvEnGMProp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:text="Are you moving into ths property?"
        android:textStyle="bold" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/elecgasYesPropBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button_background"
            android:text="Yes"
            android:textColor="@android:color/holo_blue_light" />

        <Button
            android:id="@+id/elecgasNoPropBtn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/button_background"
            android:text="No"
            android:textColor="@android:color/holo_blue_light" />

</LinearLayout>

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:text="Do you have recent Electric bill?"
        android:textStyle="bold" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/egElecBillButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button_background"
            android:text="Yes"
            android:textColor="@android:color/holo_blue_light" />

        <Button
            android:id="@+id/egElecNoBillButton"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/button_background"
            android:text="No"
            android:textColor="@android:color/holo_blue_light" />

    </LinearLayout>
                        <!--No Electricity bill layout -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/noElecGasBillLayout"
        android:orientation="vertical"
        android:visibility="gone">
        <TextView
            android:id="@+id/textView32343323"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:padding="5dp"
            android:text="Who is your Electricity provider?"
            android:textStyle="bold" />
        <EditText
            android:id="@+id/editText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/border_style"
            android:ems="10"
            android:inputType="textPersonName" />
        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:padding="5dp"
            android:text="Level of Usage?"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:id="@+id/elecgasLowButton"
                android:layout_width="111dp"
                android:layout_height="wrap_content"
                android:background="@drawable/button_background"
                android:text="Low"
                android:textColor="@android:color/holo_blue_light" />

            <Button
                android:id="@+id/elecgasMediumButton"
                android:layout_width="111dp"
                android:layout_height="wrap_content"
                android:background="@drawable/button_background"
                android:text="Medium"
                android:textColor="@android:color/holo_blue_light" />

            <Button
                android:id="@+id/elecgasHighButton"
                android:layout_width="111dp"
                android:layout_height="wrap_content"
                android:background="@drawable/button_background"
                android:text="High"
                android:textColor="@android:color/holo_blue_light" />
        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:text="Do you have recent Gas Bill?"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/egGasBillButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button_background"
            android:text="yes"
            android:textColor="@android:color/holo_blue_light" />

        <Button
            android:id="@+id/egNoGasBillButton"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/button_background"
            android:text="no"
            android:textColor="@android:color/holo_blue_light" />
    </LinearLayout>

                                    <!-- No Gas Bill Layout-->
    <LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/noGasBillLayout"
    android:orientation="vertical"
    android:visibility="gone">

    <TextView
        android:id="@+id/textView3237623"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:padding="5dp"
        android:text="Who is your Gas provider?"
        android:textStyle="bold" />
    <EditText
        android:id="@+id/editText222"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/border_style"
        android:ems="10"
        android:inputType="textPersonName" />
    <TextView
        android:id="@+id/textView22"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:padding="5dp"
        android:text="Level of Usage?"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/noGasBillLowButton"
            android:layout_width="111dp"
            android:layout_height="wrap_content"
            android:background="@drawable/button_background"
            android:text="Low"
            android:textColor="@android:color/holo_blue_light" />

        <Button
            android:id="@+id/noGasBillMediumButton"
            android:layout_width="111dp"
            android:layout_height="wrap_content"
            android:background="@drawable/button_background"
            android:text="medium"
            android:textColor="@android:color/holo_blue_light" />

        <Button
            android:id="@+id/noGasBillHighButton"
            android:layout_width="111dp"
            android:layout_height="wrap_content"
            android:background="@drawable/button_background"
            android:text="high"
            android:textColor="@android:color/holo_blue_light" />
    </LinearLayout>


</LinearLayout>
    <TextView
        android:id="@+id/textView6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:text="Do you have solar panels?"
        android:textStyle="bold" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/elecgasYesSolarBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button_background"
            android:text="Yes"
            android:textColor="@android:color/holo_blue_light" />

        <Button
            android:id="@+id/elecgasNoSolarBtn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/button_background"
            android:text="No"
            android:textColor="@android:color/holo_blue_light" />
    </LinearLayout>

    <TextView
        android:id="@+id/textView7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:text="Do you prefer conditional discounts?"
        android:textStyle="bold" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/elecgasYesDiscBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button_background"
            android:text="Yes"
            android:textColor="@android:color/holo_blue_light" />

        <Button
            android:id="@+id/elecgasNoDiscBtn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/button_background"
            android:text="No"
            android:textColor="@android:color/holo_blue_light" />
    </LinearLayout>

    <TextView
        android:id="@+id/textView8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:text="No contract term/No exit fees"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/elecgasImpBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button_background"
            android:text="Important"
            android:textColor="@android:color/holo_blue_light" />

        <Button
            android:id="@+id/elecgasNotImpBtn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/button_background"
            android:text="Not so Important"
            android:textColor="@android:color/holo_blue_light" />
    </LinearLayout>

    <Button
        android:id="@+id/button5"
        android:layout_width="312dp"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:background="@drawable/border_style"
        android:text="Check Deals"
        android:textColor="@color/Red"
        android:textStyle="bold" />

</LinearLayout>
    </ScrollView>